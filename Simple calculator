#include<stdio.h>
#include<conio.h>
#include<stdlib.h>
int main()
{
    int a,b,c,i;
    printf("enter the value of a:");
    scanf("%d",&a);
    printf("Enter the value as b:");
    scanf("%d",&b);
    for(i=0;i<6;i++){
    printf("\n 1.Addition\n 2.Substraction\n 3.Multiplication\n 4.Division\n 5.Modulus\n 6.Exit\n Enter your choice:");
    scanf("%d",&c);
    switch(c)
    {
        case 1:
        printf("The Addition of A and B is %d", a+b );
        break;
        case 2:
        printf("The Substraction of A and B is %d", a-b );
        break;
        case 3:
        printf("The Multiplication of A and B is %d", a*b );
        break;
        case 4:
        printf("The Division of A and B is %d", a/b );
        break;
        case 5:
        printf("The Modulo of A and B is %d", a%b );
        break;
        case 6:
        exit(0);
        break;
        default:
        printf("Your choice is invalid" );
        break;
    }
    }

}
